@model User
@{
    ViewData["Username"] = @ViewBag.UserName;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dizimo Migrantes</title>
</head>
<body>
    <div class="text-center my-5">
        <h1 class="display-5 mb-4 text-primary">Dizimo Migrantes</h1>
        <h5 class="display-10 mb-4 text-secondary">Administradores</h5>
        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                <a class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center" href="@Url.Action("Index","Launch")">
                    <i class="fa fa-plus me-2"></i> Lançar
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center" href="@Url.Action("Index","Consult")">
                    <i class="fa fa-search me-2"></i> Consultar
                </a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                <a class="btn btn-danger btn-lg w-100 d-flex align-items-center justify-content-center" href="@Url.Action("ReportTithes","Report")">
                    <i class="fa fa-file-excel me-2"></i> Relatório de Dizimos
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a class="btn btn-danger btn-lg w-100 d-flex align-items-center justify-content-center" href="@Url.Action("ReportSum","Report")">
                    <i class="fa fa-file-excel me-2"></i> Relatório Total de Dizimos
                </a>
            </div>
            <img src="~/img/Brasao_Migrantes.png" alt="Logo" class="img-fluid" style="max-width: 250px;">
        </div>
    </div>
</body>
</html>