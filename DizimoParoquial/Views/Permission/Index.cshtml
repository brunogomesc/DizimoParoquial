@model List<UserPermissionDTO>
@inject DizimoParoquial.Services.UserService _userService;
@inject DizimoParoquial.Services.PermissionService _permissionService;

@{
    List<UserDTO> users = await _userService.GetUsersWithouthFilters();
    List<Permission> permissions = await _permissionService.GetAllPermissions();
    int selectedUserId = ViewBag.SelectedUserId;
    string username = @ViewBag.UserName;
    ViewData["Username"] = username;
    users.RemoveAt(users.FindIndex(u => u.Username == username));
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<body>
    <div class="container my-4">
        <div class="card">
            <div class="card-body">
                <h2 class="d-flex align-items-center border-bottom pb-2 mb-3" style="font-family: system-ui; font-weight: bold;">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    Vincular permissão a usuário
                </h2>
                @using (Html.BeginForm("SearchPermissions", "Permission", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="user" class="form-label"><b>Usuários:</b></label>
                            <select class="form-control js-example-basic-single" name="user">
                                <option value="0"></option>
                                @foreach (var user in users)
                                {
                                    if (selectedUserId == user.UserId)
                                    {
                                        <option value="@user.UserId" selected>
                                            @user.Name
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="@user.UserId">
                                            @user.Name
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row g-3 mt-3">
                        <div class="col-md-3">
                            <button class="btn btn-primary w-100">
                                Ver Permissões
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <br />
    @if (permissions != null && permissions.Any())
    {
        <div class="card">
            <div class="card-header">
                Permissões do usuário @(Model?.FirstOrDefault()?.Username ?? users?.FirstOrDefault( u => u.UserId == selectedUserId)?.Name)
            </div>
            <div class="card-body">
                @using (Html.BeginForm("UpdatePermissions", "Permission", FormMethod.Post))
                {
                    <input type="hidden" name="userId" value="@ViewBag.SelectedUserId" />

                    @foreach (var permission in permissions)
                    {
                        var isChecked = Model != null && Model.Any(x => x.PermissionId == permission.PermissionId);

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedPermissions" value="@permission.PermissionId"
                                   id="permission_@permission.PermissionId" @(isChecked ? "checked" : "") />
                            <label class="form-check-label" for="permission_@permission.PermissionId">
                                - @permission.Description
                            </label>
                        </div>
                    }

                    <div class="row g-3 mt-3">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-success w-100">
                                Salvar Permissões
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

</body>
</html>

<script>
    $(document).ready(function () {
        $('.js-example-basic-single').select2();
    });
</script>
