{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.AspNetCore",
      "Serilog.Sinks.MySql",
      "Serilog.Settings.Configuration"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MySql",
        "Args": {
          //DEVELOPMENT
          "connectionString": "Server=devcorehub_dizimo_paroquial_base;Database=dizimoparoquialhml;User=dizimo;Password=dizimo2025;Port=3306;",
          //PROCUTION
          //"connectionString": "Server=devcorehub_dizimo_paroquial_base;Database=dizimomigrantesprd;User=dizimo;Password=dizimo2025;Port=3306;",
          "schemaName": "dbo",
          "tableName": "Event",
          "autoCreateSqlTable": false, 
          "restrictedToMinimumLevel": "Information", 
          "batchPostingLimit": 1000, 
          "period": "00:05:00", 
          "columnOptionsSection": {
            "customColumns": [
              {
                "ColumnName": "Environment",
                "DataType": "varchar",
                "DataLength": 50,
                "AllowNull": false,
                "NonClusteredIndex": false
              }
            ],
            "addStandardColumns": [
              "LogEvent", 
              "Properties" 
            ],
            "properties": {
              "columnName": "Properties", 
              "dataType": "json" 
            }
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
       "WithProperty", 
       {
         "Name": "WithProperty",
        "Args": {
          "Name": "ApplicationName",
          "Value": "PRD_Dizimo_Paroquial_Migrantes"
        }
       }
    ]
  },
  "AllowedHosts": "*",
  "Church": "",
  "ConnectionStrings": {
