    //"MySqlConnection": "Server=localhost;Database=dizimoparoquialhml;User=dizimo;Password=dizimo2025;Port=3306;"
    //HOMOLOGAÇÃO
    "MySqlConnection": "Server=devcorehub_dizimo_paroquial_base;Database=dizimoparoquialhml;User=dizimo;Password=dizimo2025;Port=3306;"
